<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @figure.name %></title>
  </head>
  <body>
    <h1><%= @figure.name %></h1>

    <h2>Titles</h2>
      <% @figure.titles.each do |t| %>
      <p><%= t.name %></p>
      <% end %>

    <h2>Landmarks</h2>
      <% @figure.landmarks.each do |l| %>
      <td><%= "#{l.name} (#{l.year_completed})" %></td>
      <% end %>
  </body>
</html>
